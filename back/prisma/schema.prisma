generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  birthday  DateTime
  allergies String?
  auth0Id   String
  picture   String?
  admin     Boolean  @default(false)
}
